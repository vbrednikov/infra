    "provisioners": [
        {
            "type": "shell",
            "script": "{{template_dir}}/../scripts/install_ruby.sh"
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/../scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        }
